*/

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  Q  |  W  |  F   |  P   |  T   |                                          |  J   |  L    |  U    |  Y   | BKSPC |  //  |
            // |  A  |  R  |  S   |  T   |  G   |                                          |  M   |  N    |  E    |  I   |   O   |  //  |
            // |  Z  |  X  |  C   |  D   |  V   |  //  |  //  |              |  //  |  //  |  K   |  H    |  /    |  .   |   ,   |  //  |
            //                     | //  | //  | LYR  |  SHIFT  |  ESC  |    |  RET  |  CTRL  | TAB  | //  | // |

            bindings = <
&none  &kp Q  &kp W  &kp F  &kp P  &kp B                                                      &kp J      &kp L  &kp U     &kp Y    &bspc_del   &none
&sl 2  &kp A  &kp R  &kp S  &kp T  &kp G                                                        &kp M  &kp N  &kp E     &kp I    &kp O   &sl 1
&kp LGUI  &kp Z  &kp X  &kp C  &kp D  &kp V              &none  &none      &none  &none             &kp K      &kp H  &kp FSLH  &kp DOT  &kp COMMA  &kp LGUI
                     &none  &kp LALT  &sl 3  &kp LCTRL  &kp ENTER  &kp ESC  &kp LSHIFT  &mt LC(LS(LALT)) SPC  &kp LALT  &none
            >;

            label = "base";
        };

        functional_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  Q  |  W  |  F   |  P   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |  //  |
            // |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |  //  |
            // |  Z  |  X  |  C   |  D   |  V   |  //  |  //  |              |  //  |  //  |  N   |  M    |  ,    |  .   |   /   |  //  |
            //                     | GUI  | DEL  | RET  |  SPACE  |   ESC   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |

            bindings = <
&trans  &kp N0 &kp N1  &kp N2  &kp N3  &kp N4                                              &none &kp HOME  &kp END  &kp INS  &trans &trans 
&trans  &kp N5 &kp N6 &kp N7  &kp N8  &kp N9                                              &kp TAB &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT  &trans 
&trans  &trans &trans &trans  &kp Y  &trans          &trans  &trans   &trans  &trans          &none  &none &none &none &none  &trans
           &trans  &trans  &none  &trans  &trans                              &trans  &trans  &to 0  &trans  &trans
            >;

            label = "fnc";
        };

        symbol_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  Q  |  W  |  F   |  P   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |  //  |
            // |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |  //  |
            // |  Z  |  X  |  C   |  D   |  V   |  //  |  //  |              |  //  |  //  |  N   |  M    |  ,    |  .   |   /   |  //  |
            //                     | GUI  | DEL  | RET  |  SPACE  |   ESC   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |

            bindings = <
&trans  &kp HASH   &kp AMPS  &kp PIPE  &kp EXCL  &kp QMARK                                                       &kp SQT &kp NUBS  &kp LT   &kp GT   &trans   &trans
&trans  &kp PRCNT  &kp COLON  &kp EQUAL &kp UNDER &kp SEMI                                            &kp DQT &kp CARET &kp LBRC &kp RBRC &kp DLLR &trans
&trans  &kp GRAVE  &kp STAR &kp MINUS &kp PLUS   &kp TILDE          &trans  &trans  &trans  &trans          &kp ATSN &kp LBKT  &kp LPRN &kp RPRN &kp RBKT &trans
                            &trans    &trans    &none    &trans  &trans                      &trans  &trans  &to 0     &trans    &trans
            >;

            label = "symb";
        };


        f_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  Q  |  W  |  F   |  P   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |  //  | 
            // |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |  //  |
            // |  Z  |  X  |  C   |  D   |  V   |  //  |  //  |              |  //  |  //  |  N   |  M    |  ,    |  .   |   /   |  //  |
            //                     | GUI  | DEL  | RET  |  SPACE  |   ESC   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |

            bindings = <
&trans  &kp F1  &kp F2  &kp F3  &kp F4  &kp F5                                               &kp F16  &kp F17  &kp F18  &kp F19  &kp F20  &trans
&trans  &kp F6  &kp F7  &kp F8  &kp F9  &kp F10                                                &kp TAB &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT  &trans
&trans  &kp F11  &kp F12  &kp F13  &kp F14  &kp F15      &trans  &trans  &trans  &trans      &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_CLR &trans
                         &trans  &trans   &none  &trans  &trans          &trans  &trans  &to 0  &trans  &trans
            >;

            label = "fk";
        };

    };
};
