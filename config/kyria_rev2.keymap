#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <behaviors/mouse_keys.dtsi>

#define ZMK_MOUSE_DEFAULT_MOVE_VAL 1400
#define ZMK_MOUSE_DEFAULT_SCRL_VAL 100

// unpair and re-pair the keyboard for it to be recognised as a pointer device as well.


&mt {
    flavor = "tap-preferred";
    tapping_term_ms = <200>;
};

&mmv {
   time-to-max-speed-ms = <100>; // Pretty understandable
   acceleration-exponent=<2>; // if 0 it always goes at max speed, otherwise higher exponent more quickly it reaches max speed

    /*
     *if (duration_ms > config->time_to_max_speed_ms || config->time_to_max_speed_ms == 0 ||
     *       config->acceleration_exponent == 0) {
     *       return max_speed;
     *   }
     *   float time_fraction = (float)duration_ms / config->time_to_max_speed_ms;
     *   return max_speed * powf(time_fraction, config->acceleration_exponent);
     *   The exponent is usually set to 0 for constant speed, 1 for uniform acceleration or 2 for uniform jerk.
    */
};

/*
&msc SCRL_RIGHT &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP
&mkp MB2  &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_UP &mmv MOVE_RIGHT
*/

&msc {
     time-to-max-speed-ms = <100>;
    acceleration-exponent = <2>;
};

&sl {
    ignore-modifiers;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        td: tapdance {
            compatible = "zmk,behavior-hold-tap";
            label = "TAPDANCE";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        bspc_del: backspace_delete {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp BACKSPACE>, <&kp DELETE>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
            keep-mods = <(MOD_RSFT)>;
        };

        lyr1: sticky_to_layer1 {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&sl 1>, <&to 1>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
            keep-mods = <(MOD_RSFT)>;
        };
    };

/*
    combos {
        compatible = "zmk,combos";
        to_symbol_layer_sticky {
            timeout-ms = <5000>;
            key-positions = <42 47>;
            bindings = <&sl 2>;
        };

        to_func_layer_sticky {
            timeout-ms = <5000>;
            key-positions = <15 42>;
